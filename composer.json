{
    "name": "spot2-hq/spot-validation",
    "description": "php validation packaged for spot creation/update",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/validation": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.15",
        "phpunit/phpunit": "^12.3",
        "laravel/pint": "^1.25"
    },
    "autoload": {
        "psr-4": {
            "Spot2HQ\\SpotValidation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spot2HQ\\SpotValidation\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint",
        "format-test": "vendor/bin/pint --test",
        "analyse": "vendor/bin/phpstan analyse src"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spot2HQ\\SpotValidation\\Providers\\ValidationServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
